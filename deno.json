{
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": true,
    "lib": ["dom", "deno.ns", "esnext"],
    "jsxFactory": "h"
  },
  "fmt": {
    "files": {
      "exclude": [".git", "web/build", "web/dist"]
    },
    "options": {
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "exclude": [
        ".git",
        "closure-compiler-externs",
        "web/build",
        "web/dist",
        "web/generator",
        "web/test",
        "router"
      ]
    }
  }
}
